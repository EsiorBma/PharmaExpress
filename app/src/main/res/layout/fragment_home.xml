<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_home.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to PharmaExpress!"
                android:textColor="@color/purple_200"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New pharmacies and promotions!"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popular Products"
                android:textColor="@color/teal_700"
                android:fontFamily="@font/dm_bold"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Add RecyclerView or HorizontalScrollView for popular products -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/transparent">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/lavender"
                    android:id="@+id/para_sandol_card">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paracétamol ..."
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/para_sandol"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/para2"
                            android:padding="8dp"
                            android:id="@+id/para_sandol"
                            android:background="@color/transparent"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/lavender"
                    android:id="@+id/advacare_card">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advacare ..."
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/advacare"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/advacare"
                            android:id="@+id/advacare"
                            android:padding="8dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/lavender"
                    android:id="@+id/fever_card">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feverxrhume ..."
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/feverxrhume"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/fervexrhume"
                            android:id="@+id/feverxrhume"
                            android:padding="8dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/lavender"
                    android:id="@+id/ipraf_card">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iprafeine ..."
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/iprafeine"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/ipraf"
                            android:id="@+id/iprafeine"
                            android:padding="8dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/lavender"
                    android:id="@+id/bronc_card">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Broncalene ..."
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/broncalene"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/broncalene2"
                            android:id="@+id/broncalene"
                            android:padding="8dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/lavender"
                    android:id="@+id/paracare_card">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paracare ..."
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ppara"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/ppara"
                            android:id="@+id/ppara"
                            android:padding="8dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promotions and Special Offers"
                android:textSize="22sp"
                android:fontFamily="@font/dm_bold"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:paddingBottom="8dp" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Add banner or cards for promotions -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/promo1"
                        android:scaleType="centerCrop"
                        android:padding="8dp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/promo3"
                        android:scaleType="centerCrop"
                        android:padding="8dp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/promo4"
                        android:scaleType="centerCrop"
                        android:padding="8dp" />
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Tips"
                android:fontFamily="@font/dm_bold"
                android:textColor="@color/teal_700"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Add links to health articles or tips -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Adoptez une alimentation équilibrée "
                android:textSize="18sp"
                android:fontFamily="@font/dm_medium"
                android:paddingBottom="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Restez actif physiquement : Faites de l'exercice régulièrement en pratiquant des activités physiques qui vous plaisent, comme la marche, la course, la natation, le yoga ou la danse. "
                android:textSize="18sp"
                android:fontFamily="@font/dm_medium"
                android:paddingBottom="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Assurez-vous de bien dormir : Le sommeil joue un rôle crucial dans la santé globale. Essayez de dormir environ 7 à 9 heures par nuit pour permettre à votre corps de se reposer et de récupérer. "
                android:textSize="18sp"
                android:fontFamily="@font/dm_medium"
                android:paddingBottom="10dp" />


            <ImageView
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:src="@drawable/bienetre"
                android:paddingTop="55dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
