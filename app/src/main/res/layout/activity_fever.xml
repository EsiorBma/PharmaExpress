<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicaments.fever">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:id="@+id/fever_back"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/fervexrhume"
        android:layout_marginTop="38dp"
        android:id="@+id/feverxrhume"
        android:padding="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dm_bold"
        android:text="Description"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/feverxrhume"
        android:id="@+id/text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/text1"
        android:textSize="18sp"
        android:fontFamily="@font/dm_medium"
        android:text="FERVEX ADULTES, granulés pour solution buvable en sachet est indiqué chez l'adulte et l'enfant (à partir de 15 ans) dans le traitement au cours des rhumes, rhinites, rhinopharyngites et des états grippaux : · de l'écoulement nasal clair et des larmoiements, · des éternuements, · des maux de tête et/ou fièvre.
"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="En savoir  plus"
        android:fontFamily="@font/dm_bold"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/blue_cyan"
        android:id="@+id/more3"/>

</RelativeLayout>